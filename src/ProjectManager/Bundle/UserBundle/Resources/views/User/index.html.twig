{% extends '::base.html.twig' %}

{% block body %}
	<h1>User list</h1>

	<table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
		{% for user in persons %}
        	<tr name="user_{{ user.id }}">
                <td>
	    			{{ user.id }} 
	    		</td>
	    		<td>
	    			{{ user.firstName }}
	    		</td>
	    		<td>
	    			{{ user.lastName }}
	    		</td>
	    		<td>
                    {% form_theme delete_form[user.id] ':Forms:fields.html.twig' %}
	    			<a class="btn btn-primary" href="{{ path('pm_user_update_person', { 'id' : user.id }) }}"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Update</a>
                    {{ form(delete_form[user.id]) }}
                </td>
	    	</tr>
		{% endfor %}
		</tbody>
    </table>

  		<a class="btn btn-primary" href=" {{ path('pm_user_new_person') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Create a new user</a>

{% endblock body %}
