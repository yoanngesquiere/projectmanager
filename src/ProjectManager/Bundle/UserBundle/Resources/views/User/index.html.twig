{% extends '::base.html.twig' %}

{% block body %}
	<h1>User list</h1>

	<table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
		{% for user in persons %}
        	<tr name="user_{{ user.id }}">
                <td>
	    			{{ user.id }} 
	    		</td>
	    		<td>
	    			{{ user.firstName }}
	    		</td>
	    		<td>
	    			{{ user.lastName }}
	    		</td>
	    		<td>
                    {% form_theme delete_forms[user.id] ':Forms:fields.html.twig' %}
	    			{{ form(delete_forms[user.id]) }}
                    {% form_theme edit_forms[user.id] ':Forms:fields.html.twig' %}
                    {{ form(edit_forms[user.id]) }}
                </td>
	    	</tr>
		{% endfor %}
		</tbody>
    </table>

    {% form_theme new_form ':Forms:fields.html.twig' %}
    {{ form(new_form) }}

{% endblock body %}
