default:
    suites:
        project:
            paths:
                 - %paths.base%/features/Project
            contexts:
                - ProjectContext:
                    session: '@session'
        default:
            paths:
                 - %paths.base%/features/User
            contexts: 
                - UserContext:
                    session: '@session'
    extensions:
        Behat\Symfony2Extension: ~
        Behat\MinkExtension:
            base_url: 'http://127.0.0.1/web/app_dev.php/'
            sessions:
                default:
                    symfony2: ~
                selenium2:
                    selenium2:
                        wd_host: "http://127.0.0.1:4444/wd/hub"
