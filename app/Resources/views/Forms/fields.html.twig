            data-toggle="modal" data-target="#deleteModal"
            id="delete_user_1">
        <span class="glyphicon {{ glyphicon }}" aria-hidden="true"></span>
        {{ label|trans({}, translation_domain) }}</button>
{%- endblock glyphicon_button_widget %}

